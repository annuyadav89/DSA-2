class Node{
    int value;
    Node next;
    Node(int number){
        value = number;
    }
}

class LinkedList{
    Node head;

    void insertAtPos(int pos,int number){
    Node newNode =  new Node(number);
    if(pos==1){
        newNode.next = head;
        head = newNode;
    }else{
        Node curr = head;
      for(int i = 1;i<pos-1;i++){
            curr = curr.next;
      }
      Node nextNode = curr.next;
      curr.next = newNode;
      newNode.next = nextNode;
           
        }
    }
    
    void print(){
        Node curr = head;
        while(curr!=null){
            System.out.print(curr.value+" ");
            curr = curr.next;
        }
    }
}
class Main{
    public static void main(String args[]){
        LinkedList l1 = new LinkedList();
        l1.insertAtPos(1,23);
        l1.insertAtPos(2,30);
        l1.insertAtPos(3,40);
        l1.insertAtPos(1,111);
        l1.print();
    }
}
